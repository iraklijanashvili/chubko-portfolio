{
  "name": "chubko-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "CHUBKO - Creative Graphic Design Studio Portfolio Website",
  "keywords": ["portfolio", "graphic design", "next.js", "typescript", "tailwind"],
  "author": "CHUBKO Design Studio",
  "license": "MIT",
  "homepage": "https://chubko.design",
  "repository": {
    "type": "git",
    "url": "https://github.com/iraklijanashvili/chubko-portfolio.git"
  },
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true next build",
    "preview": "next build && next start",
